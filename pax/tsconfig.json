{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",

    // ðŸ‘‡ CAMBIO CLAVE: "Bundler" es la estrategia moderna para Vite
    "moduleResolution": "Bundler",

    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",

    // ðŸ‘‡ Esto permite importar archivos .ts sin poner la extensiÃ³n
    "allowImportingTsExtensions": true,

    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}