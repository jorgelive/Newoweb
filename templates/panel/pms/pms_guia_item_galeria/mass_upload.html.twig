{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <i class="fa-solid fa-cloud-arrow-up text-primary me-2"></i> Carga Masiva de Fotos
{% endblock %}

{% block main %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">

                        <div class="alert alert-info border-0 bg-info-subtle text-info-emphasis mb-4">
                            <i class="fa-solid fa-circle-info me-2"></i>
                            Busca el √≠tem, selecci√≥nalo y sube las fotos.
                        </div>

                        {# WIDGET STIMULUS #}
                        <div
                                id="mass-uploader-widget"
                                data-controller="panel--generic-uploader"
                                data-panel--generic-uploader-url-value="{{ path('api_pms_guia_item_galeria_upload') }}"
                                data-panel--generic-uploader-param-name-value="item_id"
                        >

                            {# 1. SELECTOR (Encuadre perfecto) #}
                            <div class="mb-4">
                                <label class="form-label fw-bold text-secondary">Destino de las fotos:</label>

                                <div class="input-group shadow-sm custom-search-group">
                                    <span class="input-group-text bg-white border-end-0 text-muted ps-3">
                                        <i class="fa-solid fa-magnifying-glass"></i>
                                    </span>

                                    <select
                                            class="form-select border-start-0 ps-0"
                                            data-panel--generic-uploader-target="selector"
                                            autocomplete="off"
                                    >
                                        <option value="">Buscar √≠tem...</option>
                                        {% for item in items %}
                                            <option value="{{ item.id }}">
                                                {{ item.nombreInterno }}
                                                {% if item.titulo['es'] is defined and item.titulo['es'] is not empty %}
                                                    ‚Äî {{ item.titulo['es'] }}
                                                {% endif %}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="text-danger mt-1 d-none small" data-panel--generic-uploader-target="errorMsg"></div>
                            </div>

                            {# 2. DROPZONE #}
                            <div
                                    data-panel--generic-uploader-target="dropzone"
                                    data-action="click->panel--generic-uploader#triggerInputClick drop->panel--generic-uploader#onDrop dragover->panel--generic-uploader#onDragOver dragleave->panel--generic-uploader#onDragLeave"
                                    class="upload-dropzone mb-4"
                            >
                                <div class="py-5">
                                    <i class="fa-solid fa-images fa-3x text-secondary mb-3"></i>
                                    <h5 class="fw-bold text-dark">Arrastra tus fotos aqu√≠</h5>
                                    <p class="text-muted small mb-0">o haz clic para abrir el explorador</p>
                                </div>

                                {# üõë FIX CR√çTICO: Input "Fantasma" (No display:none, sino invisible) #}
                                <input
                                        type="file"
                                        multiple
                                        accept="image/*"
                                        style="opacity: 0; position: absolute; z-index: -1; width: 0; height: 0;"
                                        data-panel--generic-uploader-target="input"
                                        data-action="change->panel--generic-uploader#onInputChange"
                                >
                            </div>

                            {# 3. LOG #}
                            <div class="card bg-light border-0">
                                <div class="card-body p-0">
                                    <div data-panel--generic-uploader-target="log" class="p-2" style="max-height: 250px; overflow-y: auto;"></div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="card-footer bg-white border-top-0 text-center py-4">
                        <a href="{{ ea_url().setController('App\\Pms\\Controller\\Crud\\PmsGuiaItemGaleriaCrudController').setAction('index') }}" class="btn btn-outline-secondary px-4">
                            <i class="fa-solid fa-arrow-left me-2"></i> Volver al Listado
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# --- CSS PULIDO --- #}
    <style>
        /* 1. INPUT GROUP TEXT (La Lupa) */
        .custom-search-group .input-group-text {
            border-color: #ced4da;
            border-right: none;
            height: 40px;
            display: flex;
            align-items: center;
        }

        /* 2. TOM SELECT CONTROL (El Input) */
        .ts-control {
            border: 1px solid #ced4da !important;
            border-left: none !important;
            border-radius: 0 0.375rem 0.375rem 0 !important;
            box-shadow: none !important;
            min-height: 40px !important;
            height: 40px !important;
            display: flex;
            align-items: center;
            padding-left: 0 !important;
        }

        .ts-control > .item {
            display: inline-flex;
            align-items: center;
        }
        .ts-control > input {
            margin: 0 !important;
        }

        /* Focus states */
        .ts-control.focus {
            border-color: #86b7fe !important;
            box-shadow: none !important;
        }
        .custom-search-group:focus-within .input-group-text {
            border-color: #86b7fe;
        }
        .custom-search-group:focus-within .ts-control {
            border-color: #86b7fe !important;
        }

        /* 3. DROPDOWN MENU */
        .ts-dropdown {
            border-top: 1px solid #ced4da !important;
            margin-top: 4px !important;
            border-radius: 6px !important;
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1) !important;
            z-index: 9999 !important;
            background-color: white !important;
            color: #333 !important;
        }
        .ts-dropdown-content {
            max-height: 250px !important;
        }
        .ts-dropdown .option { padding: 10px 15px; cursor: pointer; }
        .ts-dropdown .active { background-color: #eff6ff !important; color: #1d4ed8 !important; }

        /* 4. DROPZONE */
        .upload-dropzone {
            border: 2px dashed #cbd5e1;
            border-radius: 12px;
            background-color: #f8fafc;
            text-align: center;
            transition: all 0.2s ease;
            cursor: not-allowed;
            opacity: 0.6;
        }
        .upload-dropzone:not(.disabled) { cursor: pointer; opacity: 1; background-color: white; }
        .upload-dropzone:not(.disabled):hover { border-color: #0d6efd; background-color: #f8fbff; }
        .upload-dropzone.drag-over { border-color: #198754 !important; background-color: #d1e7dd !important; transform: scale(1.01); }
    </style>
{% endblock %}