                                        <div class="box-body table-responsive no-padding">
                                            <h3 class="visible-print">{{ contenido.nombre}}</h3>
                                            <ul class="fa-ul">
                                                {% for componente in contenido.componentes | filter(componente => componente.fechahorainicio != componente.fechahorafin ) %}
                                                    <li>
                                                        <i class="fa-li fas fa-map"></i>
                                                        {{ componente.titulo }} en {{ componente.tituloItinerario }}
                                                        <ul class="fa-ul">
                                                            <li>
                                                                <i class="fa-li fas fa-calendar"></i>
                                                                Inicio: <span style="font-weight: bold">{{ componente.fechahorainicio|date('H:i Y/m/d') }}</span>
                                                            </li>
                                                            <li>
                                                                <i class="fa-li fas fa-calendar-check"></i>
                                                                Fin: <span style="font-weight: bold">{{ componente.fechahorafin|date('H:i Y/m/d') }}</span>
                                                            </li>

                                                        </ul>

                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    {% endif %}

                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

        </div>
    </div>

