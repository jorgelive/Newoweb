    <style>

        /* Importa la tipografía manuscrita */
        @import url('https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap');

        /* ===========================
           POST-IT (versión completa)
           Optimizado para listas con ICONOS/EMOJIS
           =========================== */

        .post-it{
            /* Variables de tema */
            --bg: #fff59d;          /* fondo tipo post-it */
            --ink: #424242;         /* color principal del texto */
            --accent: #1a237e;      /* trazo curvo inferior / acentos */
            --pad-x: 30px;
            --pad-y: 25px;
            --fs: clamp(0.8rem, 0.75rem + 0.25vw, 0.9rem);

            position: relative;
            max-width: 480px;
            margin: 20px auto 40px;
            padding: var(--pad-y) var(--pad-x);
            background: var(--bg);
            color: var(--ink);
            font-family: 'Permanent Marker', cursive;
            font-size: var(--fs);
            line-height: 1.7em;
            border-radius: 0 0 0 35px / 50px;
            box-shadow:
                    inset 0 -40px 40px rgba(0, 0, 0, 0.20),
                    inset 0  25px 10px rgba(0, 0, 0, 0.15),
                    0 5px 6px 5px rgba(0, 0, 0, 0.20);
            transition: transform .2s ease, box-shadow .3s ease;
            hyphens: auto;
            overflow-wrap: anywhere;
        }

        .post-it:hover{
            transform: rotate(-1deg) scale(1.02);
            box-shadow: 0 12px 20px rgba(0,0,0,.30);
        }

        /* Dobleces decorativos */
        .post-it:before{
            content:"";
            position:absolute;
            left:0; bottom:0;
            width:25px; height:30px;
            background: var(--bg);
            box-shadow:
                    3px -2px 10px rgba(0,0,0,.25),
                    inset 15px -15px 15px rgba(0,0,0,.30);
            transform: skewX(25deg);
        }

        .post-it:after{
            content:"";
            position:absolute;
            left:12%; bottom:0;
            width:75%; height:20px;
            border-top: 3px solid var(--accent);
            border-radius: 50%;
        }

        /* Títulos / énfasis */
        .post-it h3,
        .post-it strong{
            color: #0d47a1;
        }

        /* Texto y párrafos */
        .post-it p{
            margin: 10px 0 0;
            line-height: 1.65em;
        }

        /* Enlaces heredan color */
        .post-it a{
            color: inherit;
            text-underline-offset: 2px;
        }

        /* ===========================
           LISTAS con ICONOS/EMOJIS
           (asume que cada <li> inicia con un emoji)
           =========================== */
        .post-it ul{
            list-style: none;         /* sin viñetas: usamos iconos/emoji en el contenido */
            margin: 6px 0 10px;
            padding-left: 0;
        }

        .post-it li{
            margin: 4px 0 6px;
            line-height: 1.65em;
            /* Espaciado sutil entre icono y texto cuando el emoji es ancho */
            text-indent: 0;
            display: flex;
            align-items: flex-start;
            gap: .35em;
        }

        /* Si algún ítem NO tuviera emoji, puedes activar esta variante con una clase:
           <ul class="with-bullets"> … */
        .post-it ul.with-bullets{ list-style: none; padding-left: 0; }
        .post-it ul.with-bullets li{
            position: relative;
            padding-left: 1.25em;
        }
        .post-it ul.with-bullets li::before{
            content: "•";
            position: absolute; left: 0; top: 0.1em;
            font-weight: 700;
            color: var(--accent);
        }

        /* ===========================
           Variantes rápidas (opcionales)
           =========================== */
        .post-it--compact { --pad-x:18px; --pad-y:18px; --fs: clamp(0.85rem, 0.8rem + 0.2vw, 0.95rem); }
        .post-it--large   { --pad-x:36px; --pad-y:32px; --fs: clamp(1rem, 0.95rem + 0.5vw, 1.15rem); }

        /* Paletas (elige una por nota si quieres variar por destino/evento) */
        .post-it--sky   { --bg:#e3f2fd; --ink:#0f172a; --accent:#0d47a1; }
        .post-it--mint  { --bg:#e6f7f1; --ink:#0f172a; --accent:#00796b; }
        .post-it--rose  { --bg:#ffe3ec; --ink:#311b1b; --accent:#ad1457; }
        .post-it--sand  { --bg:#fff3cd; --ink:#3a3a3a; --accent:#8d6e63; }

        /* ===========================
           Accesibilidad y preferencias
           =========================== */
        @media (prefers-reduced-motion: reduce){
            .post-it{ transition: none; }
            .post-it:hover{
                transform: none;
                box-shadow:
                        inset 0 -40px 40px rgba(0,0,0,0.20),
                        inset 0  25px 10px rgba(0,0,0,0.15),
                        0 5px 6px 5px rgba(0,0,0,0.20);
            }
        }

        @media (prefers-color-scheme: dark){
            .post-it{
                /* Sombras un poco más intensas para contraste en dark */
                box-shadow:
                        inset 0 -40px 40px rgba(0,0,0,0.35),
                        inset 0  25px 10px rgba(0,0,0,0.25),
                        0 5px 10px rgba(0,0,0,0.45);
                /* Mantén el fondo claro del post-it para legibilidad */
                --ink:#2a2a2a;
            }
        }

        /* Impresión limpia */
        @media print{
            .post-it{
                box-shadow: none !important;
                border: 1px solid #ddd;
                color: #111;
                break-inside: avoid;
                page-break-inside: avoid;
            }
        }



