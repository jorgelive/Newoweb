                                                                            {% for componente in tipotarifa.componentes %}
                                                                                <li><i style="color: {{ componente.listacolor }};" class="fa-li fas {{ componente.listaclase }}"></i>{% if componente.cantidadComponente > 1 %} <span style="font-weight: bold;">{{ componente.cantidadComponente }} x</span>{% endif %} {{ componente.titulo }}  ({{ componente.fecha }})
