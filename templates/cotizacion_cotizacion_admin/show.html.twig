{% extends '@SonataAdmin/CRUD/base_show.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <style type="text/css">

        div.encabezado td {white-space: normal !important;}

        @media print
        {
            .locale_switcher
            {
                display: none !important;
            }
            .tab-content > .tab-pane {
                display: block !important;
                opacity: 1 !important;
                visibility: visible !important;
            }
        }
    </style>
{% endblock %}

{% block show %}


<div class="sonata-ba-view">

    {{ sonata_block_render_event('sonata.admin.show.top', { 'admin': admin, 'object': object }) }}

    <div class="row">
        <div class="col-md-12 ">
            <div class="encabezado box box-primary">
                <div class="box-header">
                    <h4 class="box-title">
                        {{ cotizacion.file.nombre }} ({{ cotizacion.file.paisnombre }})
                    </h4>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table">
                        <tbody>
                        <tr class="sonata-ba-view-container">
                            <th>Nombre</th>
                            <td>{{ cotizacion.cotizacion.nombre }}</td>

                        </tr>
                        <tr class="sonata-ba-view-container">
                            <th>Cotización</th>
                            <td>{{ cotizacion.cotizacion.titulo }}</td>
                        </tr>
                        <tr class="sonata-ba-view-container">
                            <th>Número de pasajeros</th>
                            <td>{{ cotizacion.cotizacion.numeropasajeros }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>


            {% if cotizacion.pasajeros is defined or cotizacion.archivos is defined %}
                <div class="panel-group box box-primary" id="accordion">
                    {% if cotizacion.pasajeros is defined and cotizacion.pasajeros|length > 0 %}
                        <div class="panel panel-default hidden-print">
                            <div class="panel-heading">
                                <h5 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
                                        <i class="fas fa-users"></i> Relación de pasajeros
                                    </a>
                                </h5>
                            </div>
                            <div id="collapse1" class="panel-collapse collapse {# {% if cotizacion.archivos is not defined %} in {% endif %}#}">
                                <div class="panel-body table-responsive no-padding">
                                    <table class="table table-bordered table-striped sonata-ba-list">
                                        <thead>
                                        <tr class="sonata-ba-list-field-header">
                                            <th>
                                                Nombres
                                            </th>
                                            <th>
                                                Apellidos
                                            </th>
                                            <th>
                                                Pais
                                            </th>
                                            <th>
                                                Sexo
                                            </th>
                                            <th>
                                                Tipo doc.
                                            </th>
                                            <th>
                                                Número doc.
                                            </th>
                                            <th>
                                                Fecha nacimiento
                                            </th>
                                            <th>
                                                Edad
                                            </th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for pasajero in cotizacion.pasajeros %}
                                            <tr>
                                                <td>
                                                    {{ pasajero.nombre }}
                                                </td>
                                                <td>
                                                    {{ pasajero.apellido }}
                                                </td>
                                                <td>
                                                    {{ pasajero.pais }}
                                                </td>
                                                <td>
                                                    {{ pasajero.sexo }}
                                                </td>
                                                <td>
                                                    {{ pasajero.tipodocumento }}
                                                </td>
                                                <td>
                                                    {{ pasajero.numerodocumento }}
                                                </td>
                                                <td>
                                                    {{ pasajero.fechanacimiento|date('Y-m-d') }}
                                                </td>
                                                <td>
                                                    {{ pasajero.edad }}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    {% if cotizacion.archivos is defined and cotizacion.archivos|length > 0 %}
                        <div class="panel panel-default hidden-print">
                            <div style="background-color: rgba(0,172,214,0.18);" class="panel-heading">
                                <h5 class="panel-title">
                                    <a style="font-weight: bold;" data-toggle="collapse" data-parent="#accordion" href="#collapse2">
                                        <i class="fas fa-file"></i> Tickets y documentos
                                    </a>
                                </h5>
                            </div>
                            <div id="collapse2" class="panel-collapse collapse">
                                <div class="panel-body">
                                    <div class="container-fluid">
                                        {% for archivo in cotizacion.archivos %}
                                            {% if loop.index0 % 6 == 0 %}
                                                <div class="row">
                                            {% endif %}
                                            {% if loop.index0 % 3 == 0 and loop.index0 % 6 != 0 %}
                                                <div class="clearfix visible-xs"></div>
                                            {% endif %}
                                            <div class="col-xs-4 col-sm-2">
                                                <div class="thumbnail">
                                                    <a href="{{ app.request.getSchemeAndHttpHost() ~ archivo.webPath|raw }}"{% if archivo.inModal == true %} data-toggle="lightbox"{% else %} target="_blank" {% endif %}>
                                                        <img src="{{ app.request.getSchemeAndHttpHost() ~ archivo.webThumbPath|raw }}" alt="{{ archivo.nombre }}" style="width:100%">
                                                        <div class="caption">
                                                            <p style="overflow-wrap: break-word;" class="small text-center">{{ archivo.nombre }}</p>
                                                        </div>
                                                    </a>
                                                </div>
                                            </div>
                                            {% if loop.index % 6 == 0 or loop.last %}
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            {% endif %}

            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs hidden-print" role="tablist">
                    {% for name, contenido in tabs %}
                        <li{% if loop.first %} class="active"{% endif %}>
                            <a href="#tab_{{ admin.uniqid }}_{{ loop.index }}" data-toggle="tab">
                                <i class="fas {{ contenido.icono }}" aria-hidden="true"></i>
                                <span style="font-size: 1.2em">{{ contenido.nombre }}</span>
                            </a>
                        </li>
                    {% endfor %}
                </ul>

                <div class="tab-content">
                    {% for name, contenido in tabs %}
