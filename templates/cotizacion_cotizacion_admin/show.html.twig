                                                                                        <ul style="list-style: none; padding-left: 20px;">
                                                                                            {% for tarifa in componente.tarifas %}
                                                                                                <li>{{ tarifa.titulo }} {% if tarifa.cantidad > 1 %} <strong>x {{ tarifa.cantidad }}</strong> {% endif %}
