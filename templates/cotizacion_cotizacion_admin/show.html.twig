                                                                                                                    {{ detalle.contenido }}
                                                                                                                {% endif %}
                                                                                                                </li>
                                                                                                            {% endfor %}
                                                                                                            </ul>
                                                                                                        {% endif %}
                                                                                                    </li>
                                                                                                {% endfor %}
                                                                                            </ul>
                                                                                        {% endif %}
                                                                                    </li>
                                                                                {% endfor %}
                                                                            </ul>
                                                                        </li>
                                                                    {% endfor %}
                                                                </ul>
                                                            {% endfor %}
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% if action == 'show' %}
                                        </div>
                                        {% endif %}

                                    {% elseif name == 'politica' %}
                                        <h3 class="visible-print">{{ contenido.nombre}}</h3>
                                        {{ contenido.contenido|raw }}
                                    {% elseif name == 'itinerario' %}
                                        <h3 class="visible-print">{{ contenido.nombre}}</h3>
                                        {% if contenido.itinerarios is defined and contenido.itinerarios|length > 0 %}
