{% extends '@SonataAdmin/CRUD/base_show_field.html.twig' %}

{% block field %}
    {%- if value is empty -%}

    {%- else -%}
        <div id="gmap-canvas-{{ object.id }}">
            <iframe id="gmap-frame-{{ object.id }}" src="https://maps.google.com/maps?q={{ value|escape('url') }}&t=&z={{ field_description.options.zoom | default("15") }}&ie=UTF8&iwloc=&output=embed" scrolling="no" marginheight="0" marginwidth="0">
            </iframe>
        </div>
        <p id="gmap-label-{{ object.id }}">{{ value}}</p>
        <style>
            #gmap-label-{{ object.id }} {margin-top: 5px; font-weight: 600;}
            #gmap-frame-{{ object.id }} {border: none; width: 100%; height: 100%;}
            #gmap-canvas-{{ object.id }} {overflow:hidden; background:none!important; max-width: 600px; width: 100%; height:500px;}
        </style>


    {%- endif -%}

{% endblock %}
